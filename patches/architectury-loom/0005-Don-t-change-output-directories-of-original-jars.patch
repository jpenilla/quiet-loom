 		main.getEntry("main-refmap0000.json") != null
 		def mixin = new JarFile(gradle.getOutputFile("fabric-example-mod-1.0.0-mixin.jar").absoluteFile)
 		mixin.getEntry("default-refmap0000.json") != null
