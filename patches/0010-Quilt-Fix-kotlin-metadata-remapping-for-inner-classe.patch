@@ -138,11 +138,11 @@ class RemappingKmVisitors(private val remapper: Remapper) {
 
     inner class RemappingKmTypeVisitor(delegate: KmTypeVisitor?) : KmTypeVisitor(delegate) {
         override fun visitClass(name: ClassName) {
